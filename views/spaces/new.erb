<html lang="en">
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>

  <body class="text-center">
  <body style="background-color:AliceBlue;">
    <form action="/spaces" method="post">
      <h1 class="h3 mb-3 font-weight-bold"> Add a new Space </h1>
      <label for="property_name" class="sr-only">Property Name</label>
      <input type="text" name="property_name" class="form-control" placeholder="Add property name here" required autofocus>
      <label for="bedrooms" class="sr-only">Bedrooms</label>
      <input type="text" name="bedrooms" class="form-control" placeholder="Add numbers of bedrooms here" required autofocus>
      <label for="location" class="sr-only">Location</label>
      <input type="text" name="location" class="form-control" placeholder="Add location here" required autofocus>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
      <img src="https://bit.ly/3dcbj2p" alt="App Monsters" style="width:90px;height:60px;">
      <br>
      <p class="mt-5 mb-3 text-muted">&copy; App Monsters</p>
    </form>

    <form method="get" action="/">
      <button type="submit">Return to Homepage</button>
    </form>
  </body>
</html>
